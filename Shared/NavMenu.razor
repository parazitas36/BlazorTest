<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorTest</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login" Match="NavLinkMatch.All">
                        <span class="oi oi-account-login" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>

        <AuthorizeView Roles="Student">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="student">
                        <span class="oi oi-graph" aria-hidden="true"></span> Your grades
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        
        <AuthorizeView Roles="Lecturer">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="lecturermodules">
                        <span class="oi oi-book" aria-hidden="true"></span> Your modules
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="seeddata">
                        <span class="oi oi-cloud-upload" aria-hidden="true"></span> Seed data
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="students">
                        <span class="oi oi-people" aria-hidden="true"></span> Students
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="courses">
                        <span class="oi oi-list" aria-hidden="true"></span> Courses
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="modules">
                        <span class="oi oi-book" aria-hidden="true"></span> Modules
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="assignment">
                        <span class="oi oi-document" aria-hidden="true"></span> Assign Module
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>


        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3 danger">
                    <NavLink class="nav-link text-danger" href="logout">
                        <span class="oi oi-account-logout link-danger" aria-hidden="true"></span> LogOut
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
